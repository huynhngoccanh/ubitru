%html.no-js{:xmlns => "http://www.w3.org/1999/html"}
  / <![endif]
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %title Muddleme - get paid for everything
    %link{:href => "/favicon.ico", :rel => "shortcut icon", :type => "image/x-icon"}
    %meta{:content => "", :name => "description"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    = csrf_meta_tag
    = favicon_link_tag 'favicon.jpg'
    %link{href: 'https://fonts.googleapis.com/css?family=Roboto+Slab:400,300', rel: 'stylesheet', type: 'text/css'}
    - if ["application", "merchants", "coupons"].include?(params["controller"]) && ["index", "coupons"].include?(params["action"])
      = stylesheet_link_tag  "landing", :media => 'all'
    - else
      = stylesheet_link_tag  "new_hp", :media => 'all'
  %body

    = render "layouts/new_resp_header"
    = yield
    - if ["application", "merchants", "coupons"].include?(params["controller"]) && ["index", "coupons"].include?(params["action"])
      = javascript_include_tag "landing"
    - else
      = javascript_include_tag "application"
    = render "layouts/new_resp_footer"
